<%= flash[:notice] %>

<div class="main_container">
    <%= render 'shared/title', title: "Kontakt" %>
    <div class="content_container">
      <%= form_with(url:"/mains/thank_you", method: "post", local: true) do |form| %>
      <div class="row">
        <div class="form-group">
          <%= form.label :name %>
          <%= form.text_field :name, class: "form-control", placeholder: "Enter Name" %>
        </div>
        <div class="form-group">
          <%= form.label :email %>
          <%= form.text_field :email, class: "form-control", placeholder: "Enter Email" %>
        </div>
        <div class="form-group">
          <%= form.label :message %>
          <%= form.text_area :message, class: "form-control", placeholder: "Enter Message", rows: 5 %>
        </div>
      </div>
      <%= form.submit "Send", class: "form_label" %>
      <% end %>
    </div>
</div>

