<div class="main_container">
    <%= render 'shared/title', title: "Konto entsperren" %>
    <div class="content_container">
      <%= form_for(resource, as: resource_name, url: unlock_path(resource_name), html: { method: :post }, class: "form") do |f| %>

        <%= render "devise/shared/error_messages", resource: resource %>

        <div class="form__item">
          <%= f.label :email, "E-Mail", :class=> "form__label" %>
          <%= render 'shared/icons/icon-help', tooltip: "icon-help__email" %>
          <div class="form__inputs">
            <%= f.email_field :email, :class=>"form__input", :id=>"email_input", autofocus: true, autocomplete: "email" %>
          </div>
        </div>

        <hr class="break">

        <div class="actions">
          <%= f.submit "Anweisungen zum Entsperren per E-Mail", :class=> "form__submit button" %>
        </div>
      <% end %>

      <h3>Cancel my account</h3>

      <p>Unhappy? <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %></p>

      <%= link_to "Back", :back %>

      <%= render "users/shared/links" %>
  </div>
</div>









